<%
  jobDir = "/var/vcap/jobs/log-cache-expvar-forwarder"
  certDir = "#{jobDir}/config/certs"

  lc = link("log-cache")
%>
---
processes:
- name: log-cache-expvar-forwarder
  executable: bin/run.sh
  env:
    LOG_CACHE_ADDR:     "<%= "#{lc.address}:#{lc.p('port')}" %>"
    INSTANCE_ADDR:      "<%= "#{spec.ip}:#{lc.p('port')}" %>"
    INSTANCE_ID:        "<%= spec.id %>"
    DEFAULT_SOURCE_ID:  "<%= p('default_source_id') %>"
    INTERVAL:           "<%= p('interval') %>"
    COUNTERS_JSON:      |
      <%= p('counters').to_json %>
    GAUGES_JSON:        |
      <%= p('gauges').to_json %>
    MAPS_JSON:          |
      <%= p('maps').to_json %>
    STRUCTURED_LOGGING: "<%= p('log_metrics') %>"

    CA_PATH:   "<%= "#{certDir}/ca.crt" %>"
    CERT_PATH: "<%= "#{certDir}/log_cache.crt" %>"
    KEY_PATH:  "<%= "#{certDir}/log_cache.key" %>"

  limits:
    open_files: 8192
