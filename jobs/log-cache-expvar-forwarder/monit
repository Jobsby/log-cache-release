check process log-cache-expvar-forwarder
  with pidfile /var/vcap/sys/run/bpm/log-cache-expvar-forwarder/log-cache-expvar-forwarder.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start log-cache-expvar-forwarder"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop log-cache-expvar-forwarder"
  group vcap
